!!!
%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    %title='{{ page.title }}'
    %meta{:name => 'viewport', :content => 'width=device-width'}

    <!-- syntax highlighting CSS -->
    %link{:rel => 'stylesheet', :href => '/css/syntax.css'}

    <!-- Custom CSS -->
    %link{:rel => 'stylesheet', :href => '/css/main.css'}

    %body
      %div.site
        %div.header
          %h1.title
            %a{:href => '/'} {{ site.name }}
          %a.extra{:href => '/'} home

        {{ content }}

        %class.footer
          %div.contact
            %p
              Your Name<br />
              What You Are<br />
              you@example.com
          %div.contact
            %p
              %a{:href => 'https://github.com/yourusername'} github.com/yourusername<br />
              %a{:href => 'https://twitter.com/yourusername'} twitter.com/yourusername<br />